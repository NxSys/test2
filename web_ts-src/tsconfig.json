{
	"files":
	[
		"app.ts"
	],
	"compilerOptions":
	{
		//Please change this section as your project requires
		"rootDir": ".",
		"outDir": "../web/js",

		//Please refrain from changing below without due consideration
		"declaration": true,
		"sourceMap": true,
		"module": "system",
		"target": "es5",
		"noFallthroughCasesInSwitch": true,

		// The following are considered team/org policy, please do not disable
		"forceConsistentCasingInFileNames": true,
		"listFiles": true,
		"newLine": "CRLF",
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"removeComments": true
	}
}
